<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DemoApp">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="DataTemplates/Default.xaml"/>
        
        <ResourceDictionary Source="DataTemplates/Channel.xaml"/>
        <ResourceDictionary Source="DataTemplates/Playlist.xaml"/>
        <ResourceDictionary Source="DataTemplates/SearchResult.xaml"/>
        <ResourceDictionary Source="DataTemplates/Video.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <local:YoutubeTemplateSelector x:Key="TemplateSelector.Youtube" 
                                   DefaultTemplate="{StaticResource Template.Default}" 
                                   
                                   VideoTemplate="{StaticResource Template.Video}" 
                                   ChannelTemplate="{StaticResource Template.Channel}" 
                                   SearchResultTemplate="{StaticResource Template.SearchResult}" 
                                   PlaylistTemplate="{StaticResource Template.Playlist}"/>
</ResourceDictionary>