<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:y="clr-namespace:YoutubeSnoop;assembly=YoutubeSnoop"
                    xmlns:c="clr-namespace:DemoApp.Converters">
    
    <DataTemplate x:Key="Template.Video" DataType="{x:Type y:YoutubeVideo}">
        <Border Height="90" HorizontalAlignment="Stretch" Width="500">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="{Binding Thumbnails, Mode=OneWay, IsAsync=True, Converter={c:ThumbnailsToImageSourceConverter}}" />
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch">
                    <TextBlock VerticalAlignment="Center" TextWrapping="Wrap">
                        <Run Text="Video:"  FontSize="14"/>
                        <Run Text="{Binding Title, Mode=OneWay}"/>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>