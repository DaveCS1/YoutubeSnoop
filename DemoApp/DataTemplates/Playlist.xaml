<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:y="clr-namespace:YoutubeSnoop;assembly=YoutubeSnoop"
                    xmlns:c="clr-namespace:DemoApp.Converters">
    
    <DataTemplate x:Key="Template.Playlist" DataType="{x:Type y:YoutubePlaylist}">
        <Border Height="90">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="{Binding Thumbnails, Mode=OneWay, IsAsync=True, Converter={c:ThumbnailsToImageSourceConverter}}" />

                <TextBlock Grid.Column="1" VerticalAlignment="Center" TextWrapping="Wrap">
                <Run Text="Playlist:"/>
                <Run Text="{Binding Title, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>